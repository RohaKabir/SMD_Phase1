<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#f0f4f3">
                <ImageButton
                    android:id="@+id/BackArrow"
                    android:layout_height="25dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_width="25dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/PinkBackArrow"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_width="match_parent"
                    android:text="Chats"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="#b60cda"/>
        <TextView
                android:layout_height="20dp"
                android:layout_marginStart="25dp"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#b60cda"
                android:text="My Community"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:textColor="#b60cda"
            android:text="All Messages"/>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/friend1img"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/johncooperimage"/>
                <TextView
                    android:id="@+id/friend1name"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:text="John Cooper"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#b60cda"/>
            </LinearLayout>
            <ImageView
                android:background="#c18fe1d7"
                android:layout_height="1dp"
                android:layout_width="400dp"
                ></ImageView>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/friend2img"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_image_6"/>
            <TextView
                android:id="@+id/friend2name"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:text="Jack Watson"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#b60cda"/>
        </LinearLayout>
        <ImageView
            android:background="#c18fe1d7"
            android:layout_height="1dp"
            android:layout_width="400dp"
            ></ImageView>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/friend3img"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_image_7"/>
            <TextView
                android:id="@+id/friend3name"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:text="Emma Phillips"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#b60cda"/>
        </LinearLayout>
        <ImageView
            android:background="#c18fe1d7"
            android:layout_height="1dp"
            android:layout_width="400dp"
            ></ImageView>
    </LinearLayout>
</layout>

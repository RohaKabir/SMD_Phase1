<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        style="#f0f4f3">
            <LinearLayout
                android:layout_height="560dp"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingEnd="25dp"
                android:paddingStart="25dp"
                android:paddingTop="10dp"
                android:background="@drawable/Camerascreen">
                <ImageButton
                    android:layout_height="25dp"
                    android:layout_width="25dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/closecamera"/>
                <ImageView
                    android:layout_height="25dp"
                    android:layout_width="25dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="130dp"
                    android:background="@drawable/hdricon"/>
                <ImageView
                    android:layout_height="25dp"
                    android:layout_width="25dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="130dp"
                    android:background="@drawable/brightnessicon"/>
            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="SloMo"
                    android:textStyle="bold"
                    android:textColor="#771554"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Video"
                    android:layout_marginLeft="30dp"
                    android:textStyle="bold"
                    android:textColor="#771554"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="50dp"
                    android:paddingLeft="5dp"
                    android:text="Photo"
                    android:background="@drawable/DarkPurpleRectangle"
                    android:layout_marginLeft="30dp"
                    android:textStyle="bold"
                    android:textColor="#771554"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Square"
                    android:layout_marginLeft="30dp"
                    android:textStyle="bold"
                    android:textColor="#771554"/>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Portrait"
                    android:layout_marginLeft="30dp"
                    android:textStyle="bold"
                    android:textColor="#771554"/>
            </LinearLayout>
        <ImageButton android:id="@+id/gallery"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="50dp"
            android:layout_width="35dp"
            android:scaleType="fitXY"
            android:src="@drawable/gallery"/>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="-30dp"
            android:background="@drawable/DarkPurpleRectangle"
            android:layout_marginLeft="150dp"></ImageView>
        <Button
            android:id="@+id/Cameraclick"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="-65dp"
            android:backgroundTint="#f0f3f4"
            android:layout_marginLeft="155dp"></Button>

        <ImageButton android:id="@+id/video"
            android:layout_height="35dp"
            android:layout_marginTop="-70dp"
            android:layout_marginLeft="300dp"
            android:layout_width="35dp"
            android:scaleType="fitXY"
            android:src="@drawable/ToVideo"/>
    </LinearLayout>
</layout>

<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#f0f3f4">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:background="@drawable/camerascreen"></ImageView>

        <TextView
                android:id="@+id/callname"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="-550dp"
                android:text="John Cooper"
                android:textSize="30dp"
                android:textColor="#771554"
                android:textStyle="bold"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:text="50:08"
                android:textSize="20dp"
                android:textColor="#771554"
                android:textStyle="bold"/>
            <ImageView android:id="@+id/callimage"
                android:layout_gravity="center"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:layout_width="120dp"
                android:scaleType="fitXY"
                android:src="@drawable/johncooperimage"
                />
        <ImageView
            android:background="@drawable/camerascreen"
            android:layout_gravity="center_horizontal"
            android:layout_height="5dp"
            android:layout_marginTop="350dp"
            android:layout_width="100dp"/>
            <ImageButton
                android:background="@drawable/pinkbutton"
                android:id="@+id/MicOff"
                android:layout_height="35dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="50dp"
                android:layout_width="35dp"
                android:src="@drawable/micoff"/>
            <ImageButton
                android:background="@drawable/pinkbutton"
                android:id="@+id/SpeakerPhone"
                android:layout_height="35dp"
                android:layout_marginTop="-35dp"
                android:layout_marginStart="190dp"
                android:layout_width="35dp"
                android:src="@drawable/speaker"/>

            <ImageButton
                android:id="@+id/exitcall"
                android:background="#AA0000"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="330dp"
                android:layout_marginTop="-35dp"
                android:src="@drawable/closebutton"/>
        </LinearLayout>
</layout>
